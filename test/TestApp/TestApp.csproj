<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Rhetos" Version="6.0.0" />
    <PackageReference Include="Rhetos.CommonConcepts" Version="6.0.0" />
    <PackageReference Include="Rhetos.Host" Version="6.0.0" />
    <PackageReference Include="Rhetos.Host.AspNet" Version="6.0.0" />
    <PackageReference Include="Rhetos.MSBuild" Version="6.0.0" />
    <PackageReference Include="Rhetos.MsSqlEf6" Version="6.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="8.1.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Rhetos.FloydExtensions\Rhetos.FloydExtensions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="DslScripts\Rhetos.FloydExtensions\" />
  </ItemGroup>

  <Target Name="CopyDslScripts" BeforeTargets="ResolveRhetosBuildItems">
    <ItemGroup>
      <FloydExtensionsDslScripts Include="..\..\src\Rhetos.FloydExtensions\DslScripts\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(FloydExtensionsDslScripts)" DestinationFolder="DslScripts\Rhetos.FloydExtensions" SkipUnchangedFiles="true" />
  </Target>

</Project>
